<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data></data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin16"
        tools:context="com.example.xingzhi.holographicteaching.ui.activity.AuthenticActivity">
        <include android:id="@+id/title_layout" layout="@layout/title_bar" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin16">

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:hint="请输入真实姓名"
                android:textSize="14sp"
                android:textColor="@color/color33"
                android:background="@null"
                android:drawableLeft="@drawable/ic_authentic_name"
                android:drawablePadding="10dp"
                android:padding="2dp"
                android:layout_weight="8"/>
            <View style="@style/DivideView" />

            <EditText
                android:id="@+id/et_id"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:hint="请输入身份证号"
                android:textSize="14sp"
                android:textColor="@color/color33"
                android:background="@null"
                android:drawableLeft="@drawable/ic_authentic_name"
                android:drawablePadding="10dp"
                android:padding="2dp"
                android:layout_marginTop="@dimen/margin16"
                android:layout_weight="8"/>
            <View style="@style/DivideView" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="实名注册资料一旦填写确认，无法随意更改。请您填写实名认证信息时谨慎操作！"
                android:textColor="#ff333333"
                android:textSize="12sp"
                android:layout_marginTop="@dimen/margin16" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="注：每日限认证3次"
                android:textColor="#ffd81e06"
                android:textSize="12sp"
                android:layout_marginTop="@dimen/margin8"/>

            <TextView
                android:id="@+id/bt_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="确定"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:gravity="center"
                android:background="@drawable/bg_radius_blue"
                android:layout_marginTop="70dp" />
        </LinearLayout>
    </LinearLayout>
</layout>
