<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="bean"
            type="com.example.xingzhi.holographicteaching.bean.DetailNoticeBean.AcNoticeBean" />
    </data>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radius_white_bg"
            android:padding="15dp"
            android:elevation="1dp"
            android:layout_margin="1dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="独家活动"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    android:background="@drawable/bg_notice_unique"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/item_number"
                    android:layout_marginLeft="10dp"
                    android:text="《星辰战区》代金券活动"
                    android:textColor="@color/color66"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/item_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_number"
                    android:text="活动有效期：2020-07-07 24:00至2020-07-08 23:59"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textColor="@color/color99"
                    android:textSize="10sp"
                    android:layout_marginTop="5dp"/>

            </RelativeLayout>


            <ImageView
                android:id="@+id/item_install"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_right"/>

        </RelativeLayout>

    </RelativeLayout>
</layout>

