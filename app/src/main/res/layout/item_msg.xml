<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="bean"
            type="com.example.xingzhi.holographicteaching.modle.MsgListBean.ItemListBean" />

        <import type="android.view.View" />
    </data>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radius_white_bg"
            android:padding="15dp"
            android:elevation="1dp"
            android:layout_margin="1dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="系统消息"
                    android:background="@drawable/ic_msg_point"
                    android:layout_marginRight="3dp"
                    android:visibility="@{bean.flag? View.VISIBLE : View.GONE}"/>
                <TextView
                    android:id="@+id/item_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="系统消息"
                    android:text="@{bean.title}"
                    android:textColor="@color/colorBlue"
                    android:textSize="18sp"
                    android:layout_toRightOf="@+id/iv_point"
                    android:layout_alignWithParentIfMissing="true"
                    />

                <TextView
                    android:id="@+id/item_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_number"
                    android:hint="4.333"
                    android:text="@{bean.content}"
                    android:textColor="@color/color33"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"/>

            </RelativeLayout>


            <TextView
                android:id="@+id/item_install"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:hint="9小时前"
                android:text="@{bean.time}"
                android:textColor="@color/color99"
                android:textSize="14sp"/>

        </RelativeLayout>

        <include
            android:id="@+id/item_footview"
            layout="@layout/footview"
            android:visibility="gone"/>


    </RelativeLayout>
</layout>

