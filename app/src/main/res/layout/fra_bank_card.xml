<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow"
            android:padding="@dimen/margin16">
            <TextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="持卡信息："
                android:textColor="@color/color33"
                android:textSize="16sp"
                android:layout_marginBottom="@dimen/margin16"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:text="持卡人姓名"
                android:textColor="@color/color33"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:layout_below="@id/tv_info"
                android:layout_marginBottom="@dimen/margin10"/>
            <EditText
                android:id="@+id/et_name"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:hint="与储蓄卡绑定的持卡人姓名"
                android:textColor="@color/color99"
                android:textSize="14sp"
                android:background="@drawable/bg_et"
                android:paddingLeft="12dp"
                android:layout_toRightOf="@id/tv_name"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_info"/>
            <TextView
                android:id="@+id/tv_id"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:text="身份证号"
                android:textColor="@color/color33"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:layout_below="@id/tv_name"/>
            <EditText
                android:id="@+id/et_id"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:hint="与储蓄卡绑定的身份证号"
                android:textColor="@color/color99"
                android:textSize="14sp"
                android:background="@drawable/bg_et"
                android:paddingLeft="12dp"
                android:layout_toRightOf="@id/tv_name"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_name"
                android:layout_marginBottom="@dimen/margin10"/>
            <TextView
                android:id="@+id/tv_bank"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:text="选择银行"
                android:textColor="@color/color33"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:layout_below="@id/et_id"/>
            <EditText
                android:id="@+id/et_bank"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:hint="中国建设银行"
                android:textColor="@color/color99"
                android:textSize="14sp"
                android:background="@drawable/bg_et"
                android:paddingLeft="12dp"
                android:layout_toRightOf="@id/tv_name"
                android:layout_alignParentRight="true"
                android:layout_below="@id/et_id"
                android:layout_marginBottom="@dimen/margin10"/>
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:text="卡户支行"
                android:textColor="@color/color33"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:layout_below="@id/et_bank"/>
            <EditText
                android:id="@+id/et_address"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:hint="例如：北京市五道口支行"
                android:textColor="@color/color99"
                android:textSize="14sp"
                android:background="@drawable/bg_et"
                android:paddingLeft="12dp"
                android:layout_toRightOf="@id/tv_name"
                android:layout_alignParentRight="true"
                android:layout_below="@id/et_bank"
                android:layout_marginBottom="@dimen/margin10"/>
            <TextView
                android:id="@+id/tv_number"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:text="银行卡号"
                android:textColor="@color/color33"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:layout_below="@id/et_address"/>
            <EditText
                android:id="@+id/et_number"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:hint="请输入银行储蓄卡号"
                android:textColor="@color/color99"
                android:textSize="14sp"
                android:background="@drawable/bg_et"
                android:paddingLeft="12dp"
                android:layout_toRightOf="@id/tv_name"
                android:layout_alignParentRight="true"
                android:layout_below="@id/et_address"
                android:layout_marginBottom="@dimen/margin10"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin16"
            android:background="@drawable/shadow"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin16">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份验证："
                android:textColor="@color/color33"
                android:textSize="16sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号:175***4276(不可修改)"
                android:textColor="@color/color99"
                android:textSize="14sp"
                android:layout_marginTop="@dimen/margin8"
                android:layout_marginBottom="@dimen/margin8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="@drawable/bg_et"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:layout_gravity="center_horizontal">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="请输入短信验证码"
                    android:textSize="12sp"
                    android:textColor="@color/color99"
                    android:background="@null"
                    android:layout_weight="8"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="获取验证码"
                    android:textSize="11sp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/bt_getcode"
                    android:gravity="center"
                    android:layout_weight="2"/>
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/bind_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="确认绑定"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/bg_radius_blue" />
    </LinearLayout>


</layout>