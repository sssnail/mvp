<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data></data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/radius_white_bg"
        android:padding="@dimen/margin16"
        tools:context="com.example.xingzhi.holographicteaching.ui.activity.GameGiftActivity">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/game"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_grey_cancel"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"  />
        <TextView
            android:id="@+id/tv_gift_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="武圣传奇高级礼包"
            android:textColor="@color/color33"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/iv_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/margin8" />
        <TextView
            android:id="@+id/tv_gift_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有效期至：2021-06-30"
            android:textColor="@color/color99"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tv_gift_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/tv_gift_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="武圣传奇高级礼包"
            android:textColor="@color/color33"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_gift_time"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/margin16"/>
        <TextView
            android:id="@+id/tv_gift_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="强化石*100、元宝*10W、银币*100W、血符碎片(小)*10
七彩晶钻*1"
            android:textColor="@color/color66"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tv_gift_name"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/margin8"/>

        <TextView
            android:id="@+id/tv_gift_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tv_gift_use"
            android:textColor="@color/color33"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_gift_des"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/margin16"/>
        <TextView
            android:id="@+id/tv_steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击福利->点击激活码->输入激活码->点击领取"
            android:textColor="@color/color66"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tv_gift_use"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/margin8"/>
        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="领取"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/bg_yellow"
            android:enabled="false"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/tv_steps"
            app:layout_constraintLeft_toLeftOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
